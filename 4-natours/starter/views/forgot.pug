extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Forgot password?
      form#forgotPassword__form.form
        .form__group
          label.form__label(for='forgotEmail') E-mail address
          input#forgotEmail.form__input(type='email', placeholder='you@example.com', required, autocomplete='off')        
        .form__group
          button.btn.btn--green Send